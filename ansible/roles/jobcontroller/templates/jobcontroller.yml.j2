---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: jobcontroller
  namespace: ir
spec:
  security_context:
    runAsUser: "{{ reduce_user_id }}"
  selector:
    matchLabels:
      app: jobcontroller
  template:
    metadata:
      labels:
        app: jobcontroller
    spec:
      serviceAccountName: jobcontroller
      containers:
      - name: jobcontroller
        image: ghcr.io/interactivereduction/jobcontroller@sha256:341ca8591f8ab767e65b112f936b55f71e788f5a9c63655af06b1748971cf66f
        env:
        - name: KAFKA_IP
          value: kafka-cluster-kafka-bootstrap.kafka.svc.cluster.local # Using the DNS service this will resolve to an actual IP address to the kafka service
        - name: REDUCE_USER_ID
          value: "{{ reduce_user_id }}"
        - name: PYTHONPATH
          value: /jobcontroller
        - name: DB_IP
          value: "{{ db_prod.ip}}"
        - name: DB_PASSWORD
          value: "{{ db_prod.password }}"
        - name: DB_USERNAME
          value: "{{ db_prod.username }}"
        - name: IR_API
          value: ir-api-service.ir.svc.cluster.local:80
        command: ["jobcontroller"]
        volumeMounts:
          - name: ceph-mount
            mountPath: /ceph
      volumes:
        - name: ceph-mount
          hostPath:
            type: Directory
            path: /ceph

# Role and permissions
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: jobcontroller
  namespace: ir
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: jobcontroller
rules:
- apiGroups: ["batch"] # "" indicates the core API group
  resources: ["jobs"]
  verbs: ["get", "watch", "list", "create"]
- apiGroups: [""]
  resources: ["pods/log"]
  verbs: ["get"]
- apiGroups: [""]
  resources: ["pods"]
  verbs: ["list", "get"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: jobcontroller
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: jobcontroller
subjects:
- kind: ServiceAccount
  name: jobcontroller
  namespace: ir